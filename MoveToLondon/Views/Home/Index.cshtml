                        else
                        {
                            text = "Comment ça marche?";
                        }
                        @text
                    </h2>
                    <div class="pfblock-line"></div>
                    <div class="pfblock-subtitle">
                        @if (Convert.ToBoolean(Session["IsEnglishVersion"]) == true)
