@{
    ViewBag.Title = "contactus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    string text = string.Empty;
}

<section id="pagestart" class="pfblock pfblock-gray">
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="pfblock-header wow fadeInUp">
                    <h2 class="pfblock-title">
                        @if (Convert.ToBoolean(Session["IsEnglishVersion"]) == true)
                        {
                            text = "Contact Us!";
                        }
                        else
                        {
                            text = "Contactez-nous!";
                        }
                        @text
                    </h2>
                    <div class="pfblock-line"></div>
                    <div class="pfblock-subtitle">
                        <div class="row">
                            <div class="col-sm-2 col-sm-offset-3">
                                @if (Convert.ToBoolean(Session["IsEnglishVersion"]) == true)
                                {
                                    text = @"Contact us on   ";

                                }
                                else
                                {
                                    text = @"Contactez-nous sur   ";
                                }
                                @text
                                <br />
                                <br />
                                @if (Convert.ToBoolean(Session["IsEnglishVersion"]) == true)
                                {
                                    text = @"Contact us via   ";

                                }
                                else
                                {
                                    text = @"Contactez-nous par   ";
                                }
                                @text
                            </div>
                            <div class="col-sm-3">
                                <a href="https://www.facebook.com/profile.php?id=100009371008132" target="_blank" class="btn btn-primary">Facebook <i class="fa fa-facebook"></i></a>
                                <br />
                                <br />
                                <a href="mailto:movetolondon.roomflog@gmail.com" target="_blank" class="btn btn-primary">E-Mail <i class="fa fa-envelope"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
